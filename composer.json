{
	"name": "gutenboot/gutenboot-theme",
	"description": "A Bootstrap Theme for Gutenberg (the Block Editor)",
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"scripts": {
		"phpcs": "phpcs . --extensions=php --ignore=./dist/",
		"phpcbf": "phpcbf . --extensions=php --ignore=./dist/"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	}
}
